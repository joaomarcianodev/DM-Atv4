<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/escura"
    tools:context=".MainActivity">

    <View
        android:id="@+id/fundo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/clara"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/cabecalho"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@color/escura"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/cabecalho"
        app:layout_constraintEnd_toEndOf="@id/cabecalho"
        app:layout_constraintStart_toStartOf="@id/cabecalho"
        app:layout_constraintTop_toTopOf="@id/cabecalho" />

    <View
        android:id="@+id/fundo_copiar"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/fundo_claro_arredondado"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toBottomOf="@id/cabecalho" />

    <TextView
        android:id="@+id/senhagerada"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:elevation="8dp"
        android:text="@string/aguardando"
        android:textIsSelectable="true"
        android:textColor="@color/cinza"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="@+id/fundo_copiar"
        app:layout_constraintEnd_toEndOf="@id/fundo_copiar"
        app:layout_constraintStart_toStartOf="@id/fundo_copiar"
        app:layout_constraintTop_toTopOf="@+id/fundo_copiar" />

    <TextView
        android:id="@+id/link_copiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/link_copiar"
        android:textColor="@color/cinza"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundo_copiar" />


    <TextView
        android:id="@+id/label_tamanho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:text="Tamanho da senha"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/link_copiar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/valor_tamanho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:text="16"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_tamanho"
        app:layout_constraintBottom_toBottomOf="@id/label_tamanho" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_tamanho"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:stepSize="1.0"
        android:value="16.0"
        android:valueFrom="8.0"
        android:valueTo="32.0"
        app:trackColorInactive="@color/white"
        app:trackColorActive="@color/escura"
        app:tickColorInactive="@color/cinza"
        app:tickColorActive="@color/white"
        app:thumbColor="@color/escura"
        app:layout_constraintTop_toBottomOf="@id/label_tamanho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.materialswitch.MaterialSwitch
        style="@style/Widget.App.Switch"
        android:id="@+id/opt_minusculas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:checked="true"
        android:enabled="true"
        android:text="Letras minúsculas"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/slider_tamanho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.materialswitch.MaterialSwitch
        style="@style/Widget.App.Switch"
        android:id="@+id/opt_maiusculas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:checked="false"
        android:enabled="true"
        android:text="Letras maiúsculas"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/opt_minusculas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.materialswitch.MaterialSwitch
        style="@style/Widget.App.Switch"
        android:id="@+id/opt_numeros"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:checked="false"
        android:enabled="true"
        android:text="Números"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/opt_maiusculas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.materialswitch.MaterialSwitch
        style="@style/Widget.App.Switch"
        android:id="@+id/opt_especiais"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:checked="false"
        android:enabled="true"
        android:text="Caracteres especiais"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/opt_numeros"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_gerar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/escura"
        android:text="@string/txt_gerar"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opt_especiais" />

</androidx.constraintlayout.widget.ConstraintLayout>